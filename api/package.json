{
  "name": "api-wedding-planner",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "NODE_ENV=production dotenv -- node dist/src/index.js",
    "dev": "dotenv -- nodemon",
    "build": "yarn generate && tsc",
    "generate:prisma": "prisma generate",
    "generate:nexus": "NODE_ENV=development dotenv -- ts-node --transpile-only ./src/schema.ts",
    "generate": "yarn generate:prisma && yarn generate:nexus",
    "postinstall": "yarn generate",
    "prisma:migrate:save": "dotenv -- prisma migrate save --experimental",
    "prisma:migrate:up": "dotenv -- prisma migrate up --experimental --auto-approve",
    "prisma:seed:dev": "dotenv -- ts-node prisma/seeds/index.ts"
  },
  "dependencies": {
    "@nexus/schema": "^0.15.0",
    "apollo-server-express": "^2.16.1",
    "cookie-parser": "^1.4.5",
    "dotenv-cli": "^3.2.0",
    "express": "^4.17.1",
    "firebase-admin": "^9.1.1",
    "graphql": "^15.3.0",
    "graphql-scalars": "^1.2.6",
    "helmet": "^4.1.0",
    "nexus-plugin-prisma": "^0.17.0"
  },
  "devDependencies": {
    "@types/node": "^14.6.0",
    "apollo-server-testing": "^2.16.1",
    "nodemon": "^2.0.4",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  }
}
