{
  "name": "api-wedding-gift-planner",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "NODE_ENV=production dotenv -- node src/index.js",
    "dev": "dotenv -- nodemon",
    "build": "yarn generate && tsc",
    "generate:prisma": "prisma generate",
    "generate:nexus": "NODE_ENV=development dotenv -- ts-node --transpile-only ./src/schema.ts",
    "generate": "yarn generate:prisma && yarn generate:nexus",
    "prisma:migrate:save": "dotenv -- prisma migrate save --experimental",
    "prisma:migrate:up": "dotenv -- prisma migrate up --experimental --auto-approve",
    "prisma:seed:dev": "dotenv -- ts-node prisma/seeds/index.ts",
    "config:staging": "STAGE=staging ts-node scripts/secrets.ts"
  },
  "dependencies": {
    "@nexus/schema": "^0.15.0",
    "@sendgrid/mail": "^7.2.6",
    "apollo-server-express": "^2.18.1",
    "cookie-parser": "^1.4.5",
    "cuid": "^2.1.8",
    "dotenv-cli": "^4.0.0",
    "express": "^4.17.1",
    "firebase-admin": "^9.2.0",
    "graphql": "^15.3.0",
    "graphql-iso-date": "^3.6.1",
    "helmet": "^4.1.1",
    "nexus-plugin-prisma": "^0.19.0"
  },
  "devDependencies": {
    "@google-cloud/secret-manager": "^3.2.0",
    "@types/node": "^14.11.2",
    "apollo-server-testing": "^2.18.1",
    "nodemon": "^2.0.4",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  }
}
