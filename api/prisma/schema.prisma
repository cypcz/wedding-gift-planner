datasource postgresql {
  url      = env("DATABASE_URL")
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id String @id
}

model Wedding {
  id     String   @id @default(cuid())
  name   String
  gifts  Gift[]
  guests String[]
}

model Gift {
  id        String  @id @default(cuid())
  name      String
  wedding   Wedding @relation(fields: [weddingId], references: [id])
  weddingId String
}
