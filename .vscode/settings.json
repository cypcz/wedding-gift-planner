{
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
  },
  "eslint.workingDirectories": ["web", "api"],
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/.hg/store/**": true
  }
}
